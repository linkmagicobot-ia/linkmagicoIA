<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LinkM√°gico Chatbot v6.0 - IA Conversacional Inteligente para Vendas Online</title>
    <meta name="description" content="Nova gera√ß√£o de chatbot com IA avan√ßada, extra√ß√£o universal de dados e deep linking multiplataforma. Transforme suas p√°ginas de vendas em conversas inteligentes.">
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        
        .container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 500px;
            padding: 40px;
            text-align: center;
            position: relative;
            overflow: hidden;
        }
        
        .container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #667eea, #764ba2, #667eea);
            background-size: 200% 100%;
            animation: shimmer 3s ease-in-out infinite;
        }
        
        @keyframes shimmer {
            0%, 100% { background-position: 200% 0; }
            50% { background-position: -200% 0; }
        }
        
        .logo {
            font-size: 2.5rem;
            margin-bottom: 10px;
            animation: pulse 2s ease-in-out infinite;
        }
        
        @keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }
        
        h1 {
            color: #333;
            margin-bottom: 10px;
            font-size: 1.8rem;
        }
        
        .subtitle {
            color: #666;
            margin-bottom: 30px;
            font-size: 1rem;
        }
        
        .version-badge {
            display: inline-block;
            background: linear-gradient(135deg, #28a745, #20c997);
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: bold;
            margin-bottom: 20px;
            animation: glow 2s ease-in-out infinite alternate;
        }
        
        @keyframes glow {
            from { box-shadow: 0 0 5px rgba(40, 167, 69, 0.5); }
            to { box-shadow: 0 0 20px rgba(40, 167, 69, 0.8); }
        }
        
        .alert {
            background: linear-gradient(135deg, #28a745, #20c997);
            color: white;
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 30px;
            font-weight: bold;
            position: relative;
            overflow: hidden;
        }
        
        .alert::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            animation: slide 3s ease-in-out infinite;
        }
        
        @keyframes slide {
            0% { left: -100%; }
            100% { left: 100%; }
        }
        
        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }
        
        label {
            display: block;
            margin-bottom: 8px;
            color: #333;
            font-weight: 500;
        }
        
        input, textarea {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid #e9ecef;
            border-radius: 10px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }
        
        input:focus, textarea:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            transform: translateY(-2px);
        }
        
        textarea {
            resize: vertical;
            min-height: 100px;
        }
        
        .btn {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            border: none;
            padding: 15px 30px;
            border-radius: 10px;
            font-size: 1.1rem;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
            margin-bottom: 20px;
            position: relative;
            overflow: hidden;
        }
        
        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
        }
        
        .btn:active {
            transform: translateY(0);
        }
        
        .btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s;
        }
        
        .btn:hover::before {
            left: 100%;
        }
        
        .social-buttons {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 10px;
            margin-top: 20px;
        }
        
        .social-btn {
            padding: 12px;
            border: none;
            border-radius: 8px;
            color: white;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.9rem;
            position: relative;
            overflow: hidden;
        }
        
        .social-btn:hover {
            transform: translateY(-2px) scale(1.05);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }
        
        .social-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            transition: left 0.5s;
        }
        
        .social-btn:hover::before {
            left: 100%;
        }
        
        .whatsapp { background: #25d366; }
        .instagram { background: linear-gradient(45deg, #f09433, #e6683c, #dc2743, #cc2366, #bc1888); }
        .facebook { background: #1877f2; }
        .youtube { background: #ff0000; }
        .tiktok { background: #000000; }
        .twitter { background: #1da1f2; }
        .kwai { background: #ff6600; }
        .linkedin { background: #0077b5; }
        .telegram { background: #0088cc; }
        .messenger { background: #006aff; }
        .prompt { background: #28a745; }
        .analytics { background: #6c757d; }
        
        .loading {
            display: none;
            margin: 20px 0;
        }
        
        .spinner {
            border: 4px solid #f3f3f3;
            border-top: 4px solid #667eea;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 0 auto;
        }
        
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        .result {
            display: none;
            margin-top: 20px;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 10px;
            text-align: left;
            border: 1px solid #e9ecef;
        }
        
        .success-message {
            background: linear-gradient(135deg, #d4edda, #c3e6cb);
            color: #155724;
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 15px;
            border: 1px solid #c3e6cb;
            animation: slideInDown 0.5s ease-out;
        }
        
        @keyframes slideInDown {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .chatbot-link {
            background: linear-gradient(135deg, #e3f2fd, #bbdefb);
            border: 2px solid #2196f3;
            border-radius: 8px;
            padding: 12px;
            margin: 10px 0;
            word-break: break-all;
            animation: slideInLeft 0.5s ease-out;
        }
        
        @keyframes slideInLeft {
            from { opacity: 0; transform: translateX(-20px); }
            to { opacity: 1; transform: translateX(0); }
        }
        
        .chatbot-link a {
            color: #1976d2;
            text-decoration: none;
            font-weight: bold;
            font-size: 0.9rem;
        }
        
        .chatbot-link a:hover {
            text-decoration: underline;
        }
        
        .extracted-data {
            background: #fff;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            padding: 15px;
            margin-top: 15px;
            animation: slideInUp 0.5s ease-out;
        }
        
        @keyframes slideInUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .extracted-data p {
            margin-bottom: 8px;
            font-size: 0.9rem;
        }
        
        .extracted-data strong {
            color: #495057;
        }
        
        .status-indicator {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 10px 15px;
            border-radius: 20px;
            color: white;
            font-weight: bold;
            font-size: 0.8rem;
            z-index: 1000;
            transition: all 0.3s ease;
        }
        
        .status-online {
            background: #28a745;
            animation: pulse-green 2s ease-in-out infinite;
        }
        
        .status-offline {
            background: #dc3545;
        }
        
        @keyframes pulse-green {
            0%, 100% { box-shadow: 0 0 5px rgba(40, 167, 69, 0.5); }
            50% { box-shadow: 0 0 20px rgba(40, 167, 69, 0.8); }
        }
        
        .modal {
            display: none;
            position: fixed;
            z-index: 2000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.5);
            animation: fadeIn 0.3s ease-out;
        }
        
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        
        .modal-content {
            background-color: white;
            margin: 15% auto;
            padding: 20px;
            border-radius: 10px;
            width: 80%;
            max-width: 500px;
            animation: slideInDown 0.3s ease-out;
        }
        
        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
        }
        
        .close:hover {
            color: #000;
        }
        
        @media (max-width: 600px) {
            .container {
                padding: 20px;
                margin: 10px;
            }
            
            .social-buttons {
                grid-template-columns: repeat(3, 1fr);
            }
            
            .chatbot-link a {
                font-size: 0.8rem;
            }
            
            h1 {
                font-size: 1.5rem;
            }
            
            .logo {
                font-size: 2rem;
            }
        }
        
        .typing-indicator {
            display: none;
            padding: 10px;
            font-style: italic;
            color: #666;
        }
        
        .typing-indicator::after {
            content: '';
            animation: typing 1.5s ease-in-out infinite;
        }
        
        @keyframes typing {
            0%, 60%, 100% { content: ''; }
            20% { content: '.'; }
            40% { content: '..'; }
            60% { content: '...'; }
        }
    </style>
</head>
<body>
    <div class="status-indicator status-online" id="statusIndicator">
        üü¢ Sistema Online
    </div>

    <div class="container">
        <div class="logo">ü§ñ</div>
        <h1>LinkM√°gico Chatbot v6.0</h1>
        <div class="version-badge">NOVA GERA√á√ÉO</div>
        <p class="subtitle">IA Conversacional Inteligente para Vendas Online</p>
        
        <div class="alert">
            ‚ú® Sua IA Conversacional Inteligente est√° pronta para impulsionar suas vendas! ‚ú®
        </div>
        
        <form id="chatbotForm">
            <div class="form-group">
                <label for="robotName">ü§ñ Nome do Assistente Virtual:</label>
                <input type="text" id="robotName" placeholder="@arsenal.secreto" required>
            </div>
            
            <div class="form-group">
                <label for="salesUrl">üîó URL da P√°gina:</label>
                <input type="url" id="salesUrl" placeholder="https://www.arsenalsecretodosceos.com.br/Nutrileads" required>
            </div>
            
            <div class="form-group">
                <label for="customInstructions">üí° Instru√ß√µes Personalizadas (opcional):</label>
                <textarea id="customInstructions" placeholder="Adicione instru√ß√µes espec√≠ficas para o chatbot, como tom de voz, informa√ß√µes extras, etc." rows="4"></textarea>
            </div>
            
            <button type="submit" class="btn">üöÄ Ativar Chatbot Inteligente ‚úÖ Chat</button>
        </form>
        
        <div class="loading" id="loading">
            <div class="spinner"></div>
            <p>Extraindo dados com IA e configurando sistema avan√ßado...</p>
        </div>
        
        <div class="typing-indicator" id="typingIndicator">
            Processando dados da p√°gina...
        </div>
        
        <div class="result" id="result">
            <div class="success-message" id="successMessage">
                ‚úÖ Chatbot v6.0 Ativado com Sucesso!<br>
                Sistema de IA avan√ßada configurado e pronto para vendas!
            </div>
            
            <div class="chatbot-link">
                üîó <strong>Link do Chatbot:</strong><br>
                <a href="#" id="chatbotLink" target="_blank">Clique aqui para acessar</a>
            </div>
            
            <div class="extracted-data" id="extractedData">
                <h3>üìä Dados Extra√≠dos:</h3>
                <p id="extractedSummary"></p>
            </div>
        </div>
        
        <div class="social-buttons">
            <button class="social-btn whatsapp" onclick="shareToSocial('whatsapp')">üì± WhatsApp</button>
            <button class="social-btn instagram" onclick="shareToSocial('instagram')">üì∏ Instagram</button>
            <button class="social-btn facebook" onclick="shareToSocial('facebook')">üë• Facebook</button>
            <button class="social-btn youtube" onclick="shareToSocial('youtube')">üé• YouTube</button>
            <button class="social-btn tiktok" onclick="shareToSocial('tiktok')">üéµ TikTok</button>
            <button class="social-btn twitter" onclick="shareToSocial('twitter')">üê¶ Twitter</button>
            <button class="social-btn kwai" onclick="shareToSocial('kwai')">üé¨ Kwai</button>
            <button class="social-btn linkedin" onclick="shareToSocial('linkedin')">üíº LinkedIn</button>
            <button class="social-btn telegram" onclick="shareToSocial('telegram')">‚úàÔ∏è Telegram</button>
            <button class="social-btn messenger" onclick="shareToSocial('messenger')">üí¨ Messenger</button>
            <button class="social-btn prompt" onclick="shareToSocial('prompt')">üß† Prompt</button>
            <button class="social-btn analytics" onclick="shareToSocial('analytics')">üìä Analytics</button>
        </div>
    </div>

    <script>
        let currentChatbotUrl = '';
        let extractedPageData = null;

        document.getElementById('chatbotForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const robotName = document.getElementById('robotName').value;
            const salesUrl = document.getElementById('salesUrl').value;
            const customInstructions = document.getElementById('customInstructions').value || '';
            
            // Mostrar loading
            document.getElementById('loading').style.display = 'block';
            document.getElementById('typingIndicator').style.display = 'block';
            document.getElementById('result').style.display = 'none';
            
            try {
                const response = await fetch("/extract", {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ 
                        url: salesUrl,
                        instructions: customInstructions
                    })
                });
                
                const extractData = await response.json();
                
                if (!response.ok) {
                    throw new Error(extractData.error || 'Erro ao extrair dados');
                }
                
                extractedPageData = extractData.data || extractData;
                
                // Gerar URL do chatbot
                const chatbotParams = new URLSearchParams({
                    url: salesUrl,
                    robot: robotName,
                    instructions: customInstructions
                });
                
                currentChatbotUrl = `/chat.html?${chatbotParams.toString()}`;
                
                // Mostrar resultado
                document.getElementById("loading").style.display = "none";
                document.getElementById("typingIndicator").style.display = "none";
                document.getElementById("result").style.display = "block";
                document.getElementById("successMessage").style.display = "block";
                document.getElementById("extractedSummary").innerHTML = `<strong>Resumo:</strong> ${extractedPageData.summary || 'Resumo n√£o dispon√≠vel'}`;
                document.getElementById("extractedData").style.display = "block";
                
                // Configurar link do chatbot
                document.getElementById("chatbotLink").href = currentChatbotUrl;
                document.getElementById("chatbotLink").textContent = "Clique aqui para acessar";
                
                // Abrir chatbot em nova aba
                window.open(`chat.html?name=${encodeURIComponent(robotName)}&url=${encodeURIComponent(salesUrl)}&instructions=${encodeURIComponent(customInstructions)}`, "_blank");
                
            } catch (error) {
                alert('Erro ao criar chatbot: ' + error.message);
                document.getElementById('loading').style.display = 'none';
                document.getElementById('typingIndicator').style.display = 'none';
            }
        });
        
        function shareToSocial(platform) {
            if (!currentChatbotUrl) {
                alert('Por favor, crie um chatbot primeiro!');
                return;
            }
            
            const fullUrl = window.location.origin + currentChatbotUrl;
            const text = `Confira meu novo chatbot inteligente: ${fullUrl}`;
            
            const urls = {
                whatsapp: `https://wa.me/?text=${encodeURIComponent(text)}`,
                facebook: `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(fullUrl)}`,
                twitter: `https://twitter.com/intent/tweet?text=${encodeURIComponent(text)}`,
                linkedin: `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(fullUrl)}`,
                telegram: `https://t.me/share/url?url=${encodeURIComponent(fullUrl)}&text=${encodeURIComponent(text)}`,
                instagram: `https://www.instagram.com/`,
                youtube: `https://www.youtube.com/`,
                tiktok: `https://www.tiktok.com/`,
                kwai: `https://www.kwai.com/`,
                messenger: `https://www.messenger.com/`,
                prompt: fullUrl,
                analytics: fullUrl
            };
            
            if (urls[platform]) {
                window.open(urls[platform], '_blank');
            }
        }
        
        // Status indicator
        setInterval(() => {
            const indicator = document.getElementById('statusIndicator');
            if (indicator.classList.contains('status-online')) {
                indicator.textContent = 'üü¢ Sistema Online';
            }
        }, 3000);
    </script>
</body>
</html>

